<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraint_button_device_connected"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:focusable="true"
    style="@style/DefaultCardRipple"
    >
    <ImageView
        android:id="@+id/image_device_connected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_devices_other_24"
        android:contentDescription="Device"
        />
    <TextView
        android:id="@+id/text_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_device_connected"
        app:layout_constraintRight_toLeftOf="@+id/image_button_disconnect"
        app:layout_constraintTop_toTopOf="@+id/image_device_connected"
        app:layout_constraintBottom_toBottomOf="@+id/image_device_connected"
        android:text="Adruino Name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/image_button_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/ic_baseline_link_off_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_device_connected"
        app:layout_constraintBottom_toBottomOf="@+id/image_device_connected"
        android:contentDescription="Disconnect"
        />
</androidx.constraintlayout.widget.ConstraintLayout>