<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_hydrant"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="3dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:id="@+id/relative_button_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        style="@style/CustomRippleGradient"
        >
        <RelativeLayout
            android:id="@+id/left_relative"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/street_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="1200 M"
                style="@style/CustomCleanTextColor"
                android:textStyle="normal"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/emergency_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngoa-Ekele, UY1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/left_relative"
            android:layout_toEndOf="@+id/left_relative"
            android:layout_toStartOf="@+id/more_info"
            android:layout_toLeftOf="@+id/more_info"
            android:layout_marginTop="15dp"
            />
        <ImageView
            android:id="@+id/more_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ripple_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/more_info"
            android:layout_above="@+id/relative_bottom"
            android:layout_toRightOf="@+id/left_relative"
            android:layout_toEndOf="@+id/left_relative"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/text_fire_degree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hight degree"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="start|center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_hydrant_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="17/05/2021 - 20h30"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/left_relative"
            android:layout_toEndOf="@+id/left_relative"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            >
            <View
                android:id="@+id/view_hydrant_status_color"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:animateLayoutChanges="true"
                android:background="@drawable/circle_shape_hydrant_working"
                />
            <TextView
                android:id="@+id/text_hydrant_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working"
                android:textSize="14sp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@+id/view_hydrant_status_color"
                android:layout_toEndOf="@+id/view_hydrant_status_color"
                android:layout_toStartOf="@+id/button_street_view"
                android:layout_toLeftOf="@+id/button_street_view"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_street_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:rippleColor="@color/light_300"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Street View"
                android:autoLink="all"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:linksClickable="true"
                android:maxLines="1"
                app:iconGravity="textEnd"
                android:textColor="@color/purple_200"
                app:icon="@drawable/ic_baseline_navigate_next_24"
                app:iconTint="@color/purple_200"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>