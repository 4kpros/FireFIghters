<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment"
    style="@style/CustomShapeGradient"
    >
    <include layout="@layout/page_profile_connexion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <include layout="@layout/page_profile_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_floating_action_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floating_action_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Add"
            style="@style/CustomExtendedFloatingAction"
            app:icon="@drawable/ic_round_add_24"
            app:fabSize="normal"
            app:rippleColor="@color/light_400"
            app:backgroundTint="@color/light_500"
            app:elevation="1dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomExtendedFloatingAction"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/floating_action_button_add"
            android:src="@drawable/ic_alert"
            app:fabSize="normal"
            app:rippleColor="@color/light_400"
            app:backgroundTint="@color/light_500"
            app:elevation="1dp"
            android:tooltipText="Emergency point"
            tools:targetApi="o"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/add_emergency_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/purple_200"
            android:text="Add emergency"
            app:layout_constraintBottom_toBottomOf="@+id/floating_action_button_emergency"
            app:layout_constraintEnd_toStartOf="@+id/floating_action_button_emergency"
            app:layout_constraintTop_toTopOf="@+id/floating_action_button_emergency"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomExtendedFloatingAction"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/floating_action_button_emergency"
            android:src="@drawable/ic_fire_hydrants"
            android:tooltipText="Water point"
            app:rippleColor="@color/light_400"
            app:backgroundTint="@color/light_500"
            app:elevation="1dp"
            tools:targetApi="o"
            app:fabSize="normal"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/add_water_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/purple_200"
            android:text="Add water point"
            app:layout_constraintBottom_toBottomOf="@+id/floating_action_button_water"
            app:layout_constraintEnd_toStartOf="@+id/floating_action_button_water"
            app:layout_constraintTop_toTopOf="@+id/floating_action_button_water"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_fire_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomExtendedFloatingAction"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/floating_action_button_water"
            android:tooltipText="Fire station"
            tools:targetApi="o"
            android:src="@drawable/ic_fire_station"
            app:rippleColor="@color/light_400"
            app:backgroundTint="@color/light_500"
            app:elevation="1dp"
            app:fabSize="normal"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/add_fire_station_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/purple_200"
            android:text="Add fire station"
            app:layout_constraintBottom_toBottomOf="@+id/floating_action_button_fire_station"
            app:layout_constraintEnd_toStartOf="@+id/floating_action_button_fire_station"
            app:layout_constraintTop_toTopOf="@+id/floating_action_button_fire_station"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>