<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    style="@style/CustomShapeGradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/page_profile_home_scene">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_profile_content"
        style="@style/ScrollView"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_log_out"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/linear_working_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:id="@+id/linear_expand_working_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_working_on"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:autoLink="all"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:text="Working on"
                        app:iconGravity="textEnd"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
                        app:rippleColor="@color/light_300" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_working_on"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            style="@style/CustomShape"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/working_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EM12"
                                style="@style/CustomCleanTextColor"
                                android:layout_margin="10dp"
                                android:layout_centerHorizontal="true"
                                />
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/working_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status : Working"
                                style="@style/CustomCleanTextColor"
                                android:layout_margin="10dp"
                                android:layout_below="@+id/working_name"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear_working_on">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_points"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="Manage points"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:iconGravity="textEnd"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
                    app:rippleColor="@color/light_300" />
                <LinearLayout
                    android:id="@+id/linear_manage_points_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggle_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        app:selectionRequired="true"
                        app:checkedButton="@+id/button_emergency_points"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_manage_emergency_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_manage_water_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_manage_firefighter_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fire fighter" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear_points"
                >
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:indeterminate="true"
                    app:trackColor="@color/white"
                    app:indicatorColor="@color/purple_200"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:isScrollContainer="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout_profile_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        style="@style/CustomShapeRounded"
        />
    <LinearLayout
        android:id="@+id/linear_transparent"
        style="@style/CustomShape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/relative_profile_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"
        />
    <RelativeLayout
        android:id="@+id/relative_profile_title"
        style="@style/CustomShapeSecondaryRoundedBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_profile_title"
        app:layout_constraintLeft_toLeftOf="@+id/text_profile_title"
        app:layout_constraintRight_toRightOf="@+id/text_profile_title"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="     PROFILE     "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/constraint_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        style="@style/CustomCleanTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_transparent"
        app:placeholderImage="@color/light_500"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_user_name"
        style="@style/CustomCleanTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_profile_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_mail"
        style="@style/CustomCleanTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_user_name"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_edit_profile"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        android:text="Edit"
        app:icon="@drawable/ic_baseline_edit_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
        app:rippleColor="@color/light_300" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_log_out"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        android:text="Sign out"
        app:icon="@drawable/ic_log_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_profile"
        app:rippleColor="@color/light_300" />
</androidx.constraintlayout.motion.widget.MotionLayout>