<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    style="@style/CustomShapeGradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/page_profile_home_scene">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_profile_content"
        style="@style/ScrollView"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_log_out"
        android:paddingBottom="@dimen/title_height"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/linear_working_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linear_expand_working_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_working_on"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:autoLink="all"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:text="Working on"
                        app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                        app:iconGravity="textEnd"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
                        app:rippleColor="@color/light_300" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_working_on"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            style="@style/CustomShape"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_my_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear_working_on">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_my_points"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="My points"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:iconGravity="textEnd"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
                    app:rippleColor="@color/light_300" />
                <LinearLayout
                    android:id="@+id/linear_my_points_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggle_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        app:selectionRequired="true"
                        app:checkedButton="@+id/button_emergency_points"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_emergency_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_water_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_station_points"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fire station" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_my_emergencies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:visibility="visible"
                        tools:listitem="@layout/card_my_point_emergency"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_my_fire_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:listitem="@layout/card_my_point_fire_station"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_my_water_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:listitem="@layout/card_my_point_water"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout_profile_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        style="@style/CustomShapeRounded"
        />
    <LinearLayout
        android:id="@+id/linear_transparent"
        style="@style/CustomShape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/relative_profile_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"
        />
    <RelativeLayout
        android:id="@+id/relative_profile_title"
        style="@style/CustomShapeSecondaryRoundedBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_profile_title"
        app:layout_constraintLeft_toLeftOf="@+id/text_profile_title"
        app:layout_constraintRight_toRightOf="@+id/text_profile_title"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="     PROFILE     "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/constraint_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        style="@style/CustomCleanTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_transparent"
        app:placeholderImage="@color/light_500"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_user_name"
        style="@style/CustomCleanTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="User name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_profile_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_profile_mail"
        style="@style/CustomCleanTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="user@mail.com"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_user_name"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_edit_profile"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        android:text="Edit"
        app:icon="@drawable/ic_baseline_edit_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_mail"
        app:rippleColor="@color/light_300" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_log_out"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        android:text="Sign out"
        app:icon="@drawable/ic_log_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_profile"
        app:rippleColor="@color/light_300" />
</androidx.constraintlayout.motion.widget.MotionLayout>