<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    style="@style/CustomShapeRoundedGradient"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order by"
            style="@style/CustomCleanTextColor"
            android:textSize="20sp"
            app:textAllCaps="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="10"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:rippleColor="@color/light_300"
            android:layout_margin="10dp"
            android:autoLink="all"
            android:ellipsize="end"
            android:linksClickable="true"
            android:maxLines="1"
            app:icon="@drawable/ic_baseline_close_24"
            android:textColor="@color/purple_200"
            app:iconTint="@color/purple_200"
            app:iconGravity="textEnd"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_asc_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:rippleColor="@color/light_300"
        android:text="Ascendant"
        android:layout_margin="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        app:icon="@drawable/ic_baseline_arrow_upward_24"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/purple_200"
        app:iconTint="@color/purple_200"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_desc_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:rippleColor="@color/light_300"
        android:text="Descendant"
        android:layout_margin="10dp"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="1"
        app:icon="@drawable/ic_baseline_arrow_downward_24"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/purple_200"
        app:iconTint="@color/purple_200"
        />
</LinearLayout>