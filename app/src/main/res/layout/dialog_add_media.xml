<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    style="@style/CustomShapeRoundedGradient"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency with media"
            style="@style/CustomCleanTextColor"
            android:textSize="16sp"
            app:textAllCaps="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:gravity="start"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/button_close_dialog"
            android:layout_toStartOf="@+id/button_close_dialog"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:rippleColor="@color/light_300"
            android:layout_margin="10dp"
            android:autoLink="all"
            android:ellipsize="end"
            android:linksClickable="true"
            android:maxLines="1"
            app:icon="@drawable/ic_baseline_close_24"
            android:textColor="@color/purple_200"
            app:iconTint="@color/purple_200"
            app:iconGravity="textEnd"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image : "
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLength="10"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_image_resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/text_image"
                    android:layout_toStartOf="@+id/button_add_image"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Take image"
                    app:cornerRadius="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:textColor="@color/purple_200"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video : "
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLength="10"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_video_resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/text_video"
                    android:layout_toStartOf="@+id/button_add_video"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Take video"
                    app:cornerRadius="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:textColor="@color/purple_200"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_record_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio : "
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLength="10"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_audio_resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/text_audio"
                    android:layout_toStartOf="@+id/button_add_audio"
                    />
                <ImageView
                    android:id="@+id/button_add_audio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ripple_circle"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_mic_24"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    app:tint="@color/purple_200"
                    />
                <ImageView
                    android:id="@+id/button_remove_audio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ripple_circle"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_round_clear_24"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    app:tint="@color/purple_200"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_recording_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_recording_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recording audio : "
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLength="20"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_recording_audio_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:20 s"
                    style="@style/CustomCleanTextColor"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/text_recording_audio"
                    android:layout_toStartOf="@+id/button_stop_recording_audio"
                    />
                <ImageView
                    android:id="@+id/button_stop_recording_audio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ripple_circle"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_round_stop_24"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    app:tint="@color/purple_200"
                    />
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_emergency_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:inputType="text"
                android:gravity="start"
                android:hint="Message"
                app:textInputLayoutFocusedRectEnabled="true"
                style="@style/CustomShapeRoundedGradient"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_send_emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Send"
                app:cornerRadius="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_remember_forgot"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>